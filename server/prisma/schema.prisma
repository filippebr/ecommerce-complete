generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  firstname    String
  lastname     String
  email        String    @unique
  mobile       String    @unique
  password     String
  role         String    @default("user")
  isBlocked    Boolean   @default(false)
  address      String?
  refreshToken String?
  cart         Cart[]
  wishlist     Product[]
  rating       Rating[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @default(now())
}

model Product {
  id          String   @id @default(uuid())
  User        User?    @relation(fields: [userId], references: [id])
  userId      String?
  title       String
  slug        String   @unique
  description String
  price       Float
  category    String
  brand       String
  quantity    Int
  sold        Int      @default(0)
  images      String
  color       String
  rating      Rating[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Cart {
  id     Int     @id @default(autoincrement())
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model Admin {
  id        String   @id @default(uuid())
  firstname String
  lastname  String
  email     String   @unique
  mobile    String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Rating {
  id        String   @id @default(uuid())
  star      Int
  comment   String?
  product   Product? @relation(fields: [productId], references: [id])
  productId String?
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?
}
