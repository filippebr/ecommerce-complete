generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  firstname String
  lastname  String
  email     String    @unique
  mobile    String    @unique
  password  String
  role      String    @default("user")
  isBlocked Boolean
  cart      Cart[]
  address   String?
  wishlist  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
}

model Product {
  id     Int     @id @default(autoincrement())
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model Cart {
  id     Int     @id @default(autoincrement())
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model Admin {
  id        String   @id @default(uuid())
  firstname String
  lastname  String
  email     String   @unique
  mobile    String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
